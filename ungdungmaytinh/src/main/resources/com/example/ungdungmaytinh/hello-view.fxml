<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ungdungmaytinh.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>
<HBox alignment="CENTER">
  <Label text="Nhập số a"/>
  <TextField fx:id="a"/>
</HBox>
  <HBox alignment="CENTER">
  <Label text="Nhập số b"/>
  <TextField fx:id="b"/>
</HBox>

  <Button text=" Phép Cộng" onAction="#congHelloButtonClick"/>
  <Button text=" Phép Trừ" onAction="#truHelloButtonClick"/>
  <Button text=" Phép Nhân " onAction="#nhanHelloButtonClick"/>
  <Button text=" Phép Chia " onAction="#chiaHelloButtonClick"/>
</VBox>
